<nav>
    <%= link_to image_tag('logo.png'), root_path %>
    <ul class='left'>
        <li>
            <%= link_to "All movies", movies_path %>
        </li>
    </ul>
    <ul class="right">
        <li>
            <% if current_user %>
                <%= link_to @current_user.name, @current_user, class:"btn btn-info" %>
