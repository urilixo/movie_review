<section class="user">
    <%= profile_pic(@user)%>
    <h1><%= @user.name %></h1>
    <h2><%= link_to @user.email %> </h2>
</section>
<aside> 
    <h4>Favorite movies</h4>
    <ul>
        <% @user.favorited.each do |f| %>
            <li> <%= link_to f.title, f %></li>
        <% end %>
    </ul>
</aside>
<% if current_user?(@user) || current_user_admin? %>
    <section class="admin">
        <%= link_to "Edit Profile", edit_user_path, class:"button" %>
        <%= link_to "Delete Profile", user_path, data:{ turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this profile?"}, class:"button"%>
    </section>
<% end %>