<%= form_with(model: user) do |f| %>
    <%= render "shared/errors", object: user %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :email %>
    <%= f.email_field :email %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.label :password_confirmation, "Retype your password" %>
    <%= f.password_field :password_confirmation %>

    <%= f.submit %>
<% end %>