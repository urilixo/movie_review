<h1>Review for <%= link_to @movie.title, @movie %></h1>
<section class="review">
    <p><%= @review.name %></p>
    <p><%= render "shared/stars", percent: @review.stars_as_percent %></p>
    <p><%= @review.comment %></p>

    <section class="admin">
        <%= link_to 'Back', :back, class: 'button' %>
        <%= link_to 'Delete review', [@movie, @review], class:'button', data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this review?"} %>


    </section>
</section>